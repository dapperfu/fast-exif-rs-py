# Makefile for My Lakeshore Subaru Contact Form Automation
# Generated by Claude Sonnet 4 via Cursor IDE

.PHONY: help venv install test run clean

# Default target
help:
	@echo "Available targets:"
	@echo "  venv     - Create Python virtual environment"
	@echo "  install  - Install dependencies in virtual environment"
	@echo "  test     - Run the contact form automation script"
	@echo "  run      - Run the script with custom parameters"
	@echo "  clean    - Remove virtual environment and temporary files"

# Create virtual environment
venv:
	python3 -m venv venv

# Install dependencies
install: venv
	venv/bin/pip install --upgrade pip
	venv/bin/pip install -r requirements.txt

# Run the contact form automation script
test: venv
	venv/bin/python contact_form_automation.py

# Run with custom parameters (example)
run: venv
	@echo "Running contact form automation..."
	venv/bin/python contact_form_automation.py

# Clean up
clean:
	rm -rf venv
	rm -rf __pycache__
	rm -rf .pytest_cache
	find . -name "*.pyc" -delete
	find . -name "*.pyo" -delete
